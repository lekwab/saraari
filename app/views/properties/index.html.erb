<p id="notice"><%= notice %></p> 

<h1 class="h3">Properties</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Price</th>
      <th>Rooms</th>
      <th>Bathrooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.address %></td>
        <td><%= property.price %></td>
        <td><%= property.rooms %></td>
        <td><%= property.bathrooms %></td>
        <td colspan=2 >
        <div class="btn-group me-2">
        <%= link_to 'Show', property, class: "btn btn-outline-secondary btn-sm" %>
        <%= link_to 'Edit', edit_property_path(property), class: "btn btn-outline-dark btn-sm" %>
        </div></td>
        <td><%= link_to 'Remove', property, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Property', new_property_path, class: "btn btn-success" %>
