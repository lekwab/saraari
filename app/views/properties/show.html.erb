<center> <% (0...@property.images.count).each do |image| %>
      <%= image_tag(@property.thumbnail(image), style:'padding:10px') %>
<% end %> </center>
  <div class="photo-overlay">
  </div>  
  
</div>
<div class="container">
  <div class="row">
     <div class="col-8">
          <div class="row">
            <div class="col-lp-4">
            
              <p class="h3"> <strong><%= @property.name %> </strong></p>
              <p class="h5 text-muted">
              <% if @property.for_rent? %> 
              <%=  "For Rent at" %> 
             <% else %>
              <%=  "For Sale at" %>
            <% end %>
              <strong><%= @property.address %></strong></p>
            <p class="h2 mb-3">
             <% if @property.for_rent? %> 
               <%= @property.price > 0 ? number_to_currency(@property.price, precision: 0, :unit => "GH¢") : "For Rent" %> / month
             <% else %>
               <%= @property.price > 0 ? number_to_currency(@property.price, precision: 0,  :unit => "GH¢") : "For Sale"%>
            <% end %>
            </p>
            </div>
          <div class="col-lp-6 text-center text-white">
            <div class="row mr-lp-3 mt-sm-3 bg-dark p-3">
          <div class="col-4">
          <p><strong>Rooms</strong></p>
            <span><svg class="domain-icon css-1odb7b6" width="24" height="24" viewBox="0 0 24 24" aria-hidden="true"><path fill="none" stroke="currentColor" stroke-width="2" d="M4.00002 19.00001v2M20.00002 19.00001v2M8 11h8a5 5 0 0 1 5 5v3H3v-3a5 5 0 0 1 5-5z"></path><path d="M6.5 11V9A1.5 1.5 0 0 1 8 7.5h2A1.5 1.5 0 0 1 11.5 9v1M12.5 10V9A1.5 1.5 0 0 1 14 7.5h2A1.5 1.5 0 0 1 17.5 9v2" fill="none" stroke="currentColor"></path><path d="M20 13V5a2 2 0 0 0-2-2H6a2 2 0 0 0-2 2v8" fill="none" stroke="currentColor" stroke-width="2"></path><path fill="none" stroke="currentColor" d="M3.5 15.5h17"></path></svg> 
            <%= @property.rooms %></span>
          </div> 
          <div class="col-4">
          <p><strong>Bathrooms</strong></p>
            <span><svg class="domain-icon css-1odb7b6" width="24" height="24" viewBox="0 0 24 24" aria-hidden="true"><path fill="none" stroke="currentColor" stroke-width="2" d="M6 19v2M18 19v2"></path><g fill="currentColor"><circle cx="15.5" cy="8.5" r=".5"></circle><circle cx="13.5" cy="8.5" r=".5"></circle><circle cx="11.5" cy="8.5" r=".5"></circle><circle cx="13.5" cy="6.5" r=".5"></circle><circle cx="13.5" cy="10.5" r=".5"></circle><circle cx="11.5" cy="10.5" r=".5"></circle><circle cx="17.5" cy="10.5" r=".5"></circle><circle cx="15.5" cy="10.5" r=".5"></circle></g><g fill="none" stroke="currentColor" stroke-width="2"><path d="M4 13h16v2a5 5 0 0 1-5 5H9a5 5 0 0 1-5-5v-2zM4 12V7a3 3 0 0 1 3-3h1"></path><path d="M8 6.3V4a1 1 0 0 1 1-1h2.3a.7.7 0 0 1 .5 1.2L9.2 6.8A.7.7 0 0 1 8 6.3zM3 13h18"></path></g></svg>
            <%= @property.bathrooms %></span>
            
          </div>
        </div>
      </div>
      <div class="row border-top border-bottom mt-5 mb-4 pt-4 pb-4">
        <div class="col-6">
        <% if @property.for_rent? %> 
          <strong><%= link_to "Rent Support?", "#", class: "text-success" %></strong>
        <% else %>
            <strong><%= link_to "Mortgage Calculator?", "#", class: "text-success" %></strong>
        <% end %>
        </div>
        <div class="col-6 text-right">
          <strong><%= link_to "Can I afford this property?", "#", class: "text-success" %></strong>
        </div>
       </div>
   <div class="row">   
      <div class="col">
        <p class="h3"> <strong><%= @property.name %> </strong></p>
        <p class="h5">Property Description</p>
          
          <div class="prop-details">
            <%= simple_format @property.details %>
          </div>
       <!--   <button class="btn btn-sm tn-outline-info mt-3 mb-3" id="toggleDetails">Read More</button> 
       -->
      </div>  
    </div>
  </div>
      
      <br>
      </div>
  <div class="col-md-4">
        <%= render "properties/agent_details" %>
  </div>
     
  <section id="latest-properties" class="mb-5">
  <div class="container">
  <p class="h5 text-muted">Other Properties from <strong> <%= @agent.first_name %> </strong> </p>
  <hr>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <%= render "properties/latest_properties", properties: @agent_properties %>
    </div>
  </div>
  </section>
</div>