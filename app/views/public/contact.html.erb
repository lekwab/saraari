<main>
    <section class="py-5 text-center container">
    <div class="row py-lg-5">
<div class="pricing-header p-3 pb-md-4 mx-auto text-center">
      <h1 class="fw-light">Contact Us</h1>
      <p class="lead text-muted">Any Questions?<br/> We are always available to attend to your needs.</p>
</div>
</div>
</section>
<section class="py-5 container">
    <div class="row g-5">
      <div class="col-md-5 col-lg-4 order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary">Advertisements</span>
        </h4>
        <div class="h-400 p-5 text-white bg-dark rounded-3">
          <h2>BANNER</h2>
          <p>Advertise Here.</p>
          <button class="btn btn-outline-light" type="button">Click Here</button>
        </div>
        <br/>
        <div class="h-400 p-5 text-white bg-secondary rounded-3">
          <h2>BANNER</h2>
          <p>Advertise Here.</p>
          <button class="btn btn-outline-light" type="button">Click Here</button>
        </div>
      </div>

      
      
      
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Contact Form</h4>
        <form class="needs-validation" novalidate>
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="firstName" class="form-label">First name</label>
              <input type="text" class="form-control" id="firstName" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="lastName" class="form-label">Last name</label>
              <input type="text" class="form-control" id="lastName" placeholder="" value="" required>
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>

            <div class="col-12">
              <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
              <input type="email" class="form-control" id="email" placeholder="you@example.com">
              <div class="invalid-feedback">
                Please enter a valid email address for updates.
              </div>
            </div>

            <div class="col-12">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="text" class="form-control" id="phone" placeholder="001 234 5678" required>
              <div class="invalid-feedback">
                Please enter your phone number.
              </div>
            </div>
            <div class="col-12">
            <label for="message" class="form-label">Additional Message</label>
            <textarea id="textarea" class="form-control" rows="4"  placeholder="Additional Message"> </textarea>     
            </div>

          <button class="w-90 btn btn-primary btn-lg" type="submit">Submit</button>
        </form>
      </div>
    </div>
    </section>
  </main>